    <script>
        requirejs([], function () {

            var tableName = "enllacos";
            var vm = new Vue({
                el: '#webconsole-page',
                data: function () {
                    return {
                        menuModel: menuModelBuilder(),
                        table: {}
                    }
                },
                mounted: function () {
                    var self = this;
                    axios.post("/<%=mountPoint%>/api/gettable", { tableName: tableName }).then(function (res) {
                        // comprova que tots els elements tenen una id
                        var tipusLen = res.data.contents.length;
                        for(var i=0; i < tipusLen; i++) {
                            check_ids(res.data.contents[i].list);
                        }
                        self.table = res.data;
                    }, function (err) {
                        self.table = {};
                        self.$toast.add({ severity: 'error', summary: "No s'ha pogut carregar la taula " + tableName, 
                                          life: 3000 });
                        console.log(err);
                    });
                },
                methods: {
                    saveChanges: function(){

